pipeline {
    agent any

    stages {
        stage('not docker') {
            steps {
                echo 'not inside container'
            }
        }
        
        stage('docker') {
            agent {
                docker {
                    image 'alpine/jmeter:5.6'
                    args '--entrypoint=""'
                    reuseNode true
                }    
            }
            
            steps {
                echo 'inside container'
                sh '''
                    pwd
                    ls -la
                    jmeter --version
                    jmeter -n -t tests/qpp-test-plan.jmx -l results/result.jtl -j results/jmeter.log
                    echo "JMeter Test Finished"
                    ls -la

                '''
                
            }
        }

        stage('get config file') {
            steps {    
                sh '''
                    pwd
                    ls -la
                '''
                echo 'get congig data'
                sh "wget https://raw.githubusercontent.com/Blazemeter/taurus/master/examples/jmeter/stepping.yml"
            }
        }

        stage("run test") {
            steps {
                echo 'stepping'
                bzt "stepping.yml"    
            }

        }

    }

    
    

    post {
        success {
            sh '''
            pwd
            ls -la
            cd results
            ls -la
            '''
            archiveArtifacts artifacts: 'results/*.jtl,results/*.log'
        }
        
        
        cleanup {
            cleanWs()
        }
    }
}
