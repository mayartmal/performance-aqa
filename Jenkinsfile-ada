pipeline {
    agent any

    stages {
        stage('Non Docker Checker') {
            steps {
                echo 'Not inside container'
            }
        }
        
        stage('Running JMeter Tests') {
            agent {
                docker {
                    image 'alpine/jmeter:5.6'
                    args '--entrypoint=""'
                    reuseNode true
                }    
            }
            
            steps {
                echo 'inside container'
                sh '''
                    pwd
                    ls -la
                    jmeter --version
                    jmeter -n -t tests/qpp-test-plan.jmx -l results/result.jtl -j results/jmeter.log
                    echo "JMeter Test Finished"
                    ls -la
                '''
            }

        }       
    }

    
    

    post {
        success {
            sh '''
            pwd
            ls -la
            cd results
            ls -la
            '''
            archiveArtifacts artifacts: 'results/*.jtl,results/*.log'
            perfReport sourceDataFiles: 'results/result.jtl'
        }
        
        
        cleanup {
            cleanWs()
        }
    }
}
